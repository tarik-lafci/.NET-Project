@model GenreModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Genre Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Genre</h4>
    <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.GenreName)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.GenreName)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.MovieCountOutput)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.MovieCountOutput)
            </dd>
        </dl>
    @if (Model.MovieCountOutput > 0)
    {
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.MovieNamesOutput)
            </dt>
            <dd class="col-10">
                @Html.Raw(Model.MovieNamesOutput)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



